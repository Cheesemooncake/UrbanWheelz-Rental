<!DOCTYPE html>
<html lang="en">
  <%- include('./components/head.ejs') %>
  <%- include('./components/header.ejs') %>
  <body>
      <h1 style="text-align: center;">Transport:</h1>
        <% if (transports.length) { %>
          <% transports.forEach(({ _id, name, author, copys }) => { %>
            <li>
              <article>
                <h2>
                  <a href="/transports/<%= _id %>">
                    <%= name %>
                  </a>
                </h2>
                <p>
                  <%= author %>
                </p>
                <div class="info" style="font-size: smaller;">
                  <span><span style="color: gray;">Number of instances:</span><%= copys.length %></span>
                </div>
              </article>
            </li>
            <% }) %>
              <% } %>

  </body>

</html>